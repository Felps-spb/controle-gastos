{{!-- Template utilizado para exibir lista de transacacoes
com opcao de adicionar transacoes e excluir as existentes --}}

<div class="card rounded-3 shadow-lg">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="card-title mb-0">Cadastrar Transacoes</h2>
            <a href="/transacao/cadastrarTransacao" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Adicionar Transacao
            </a>
        </div>

        {{#each transacaos}}
        <div class="card mt-4">
            <div class="card-body">
                <li class="list-group-item">
                    <strong>Pessoa:</strong> {{this.PessoaId.nome}} <br>
                    <strong>Valor:</strong> {{this.valor}} <br>
                    <strong>Tipo:</strong> {{this.tipo}} <br>
                    <strong>Descrição:</strong> {{this.Descricao}}
                </li>
            </div>

            <div class="card-footer bg-transparent">
                <div class="d-grid gap-2">
                    <form action="/transacao/cadastrar/deletar" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                            <i class="fas fa-trash-alt me-2"></i>Excluir
                        </button>
                    </form>
                </div>
            </div>
        </div>

        {{else}}
        <li class="list-group-item">Nenhuma Transação cadastrada.</li>
        {{/each}}

    </div>
</div>
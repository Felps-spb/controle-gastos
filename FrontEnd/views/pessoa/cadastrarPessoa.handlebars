<div class="card border-dark shadow-lg" style="max-width: 600px; margin: 2rem auto;">
    <div class="card-header bg-dark text-white">
        <h3 class="mb-0"><i class="fas fa-user-plus mr-2"></i>Cadastro de Pessoa</h3>
    </div>

    <form action="/pessoa/cadastrarPessoa/nova" method="post" class="card-body">
        <div class="mb-4">
            <label for="nome" class="form-label fw-bold text-dark">Nome</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="nome" id="nome" class="form-control form-control-lg"
                    placeholder="Digite seu nome completo" required>
            </div>
            <div class="form-text text-muted">Informe seu nome completo.</div>
        </div>

        <div class="mb-5">
            <label for="DataNascimento" class="form-label fw-bold text-dark">Data de Nascimento</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                <input type="date" name="dataNascimento" id="DataNascimento" class="form-control form-control-lg"
                    required>
            </div>
        </div>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm py-3 text-uppercase fw-bold">
                <i class="fas fa-save mr-2"></i>Cadastrar Agora
            </button>
        </div>
    </form>
</div>